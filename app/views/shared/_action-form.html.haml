%h2
  アクション新規追加
.form
  = form_for [@client,@contact] do |f|
    = f.label 'カテゴリ',for: '',class: "col offset-s1"
    = f.collection_select :act_cat_id, ActCat.all, :id ,:category,{include_blank: true},{class: "select-list input-field col s8 offset-s2",id: "act-cat"}
    = f.label '詳細',for: 'closing-day',class: "col offset-s1"
    = f.label :detail,'詳細',for: 'detail',class: "col offset-s1"
    = f.text_area :detail ,id: 'detail', class: "materialize-textarea col s8 offset-s1", placeholder: '詳細'
    = f.label :file,'添付ファイル',for: 'file',class: "col offset-s1"
    = f.file_field :file, id: 'file',class: "materialize-textarea col s8 offset-s1"
    = f.label :start_date,'開始日',for: 'start_date',class: "col offset-s1"
    = f.date_field :start_date,id: 'start_date',class: "materialize-textarea col s8 offset-s1"
    = f.label :end_date,'終了日',for: 'end_date',class: "col offset-s1"
    = f.date_field :end_date,id: 'end_date',class: "materialize-textarea col s8 offset-s1"
    = f.label :in_progress, '進行中',for: 'in_progress'
    = f.check_box :in_progress,id: 'in_progress',as: :boolean,checked: true
    = f.submit '登録', class: 'waves-effect waves-light btn'